{
  "builds": [
    {
      "src": "package.json",  // Points to the React project configuration
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"  // Directory where the built files will be located
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",  // Matches all routes
      "dest": "/$1"    // Serves files from the `build` directory
    }
  ]
}
