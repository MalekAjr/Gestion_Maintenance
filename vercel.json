{
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "front/build" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/", "dest": "/signup" },
    { "src": "/signup", "dest": "/signup" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
